<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    android:scrollbarSize="50dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="2106dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/aclonica"
        android:text="Hello World!"
        android:textColor="#FFFFFF"
        android:textSize="400sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <ImageView
        android:id="@+id/ImageView_egg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="836dp"
        android:onClick="knock"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/perple_egg"
        tools:layout_editor_absoluteY="1337dp" />

    <TextView
        android:id="@+id/TextView_counter"
        android:layout_width="639dp"
        android:layout_height="702dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/aclonica"
        android:text="10"
        android:textColor="#FFFFFF"
        android:textSize="400sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.746" />

    <Button
        android:id="@+id/button"
        android:layout_width="766dp"
        android:layout_height="500dp"
        android:onClick="reset"
        android:text="reset"
        android:textColorLink="#E1E9E7"
        android:textSize="500px"
        tools:layout_editor_absoluteX="1115dp"
        tools:layout_editor_absoluteY="3839dp" />


</androidx.constraintlayout.widget.ConstraintLayout>